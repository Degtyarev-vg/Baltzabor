include ../blocks.project/includes

doctype html
html(lang="ru").html
  include templates/head/head
    block head
      - var pageTitle = "Заборы для дачи в Спб и Ленобласти";

  +page

    +header(true).__header
      .grid
        +e.bottom
          +e("h1").header Установка заборов
          +e("h3").subheader в Ленинградской области и Санкт-Петербурге
          +e("img")(src="img/header-img.jpg" alt="Балтзабор").img


    +b.content.__content

      +font-switch

      +section-advantages

      +section-info

      +section-services

      +section-prices

      +section-works(sliderWorks)
        .grid
          +b("h2").heading.__heading Наши работы

      +section-reviews

      +section-faq


    +footer(true).__footer
