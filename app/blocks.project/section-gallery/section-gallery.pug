mixin section-gallery()
  +b("section").section-gallery&attributes(attributes)
    .grid
      +b("h1").heading.__heading Фото заборов из сетки гиттер
      +e.filters
        each filter in galleryFilters
          +e.filter
            +b.label._no-left-offset !{filter.label}
            +b.custom-select
              +e("a")(href="javascript:void(0);").drop-button !{filter.dropButton}
              +e("ul").drop-list
                - let i = 1;
                each item in filter.items
                  +e("li")(class="drop-item" + ((i == 1) ? "_selected" : ""))
                    +e("a")(href=item.href).drop-link !{item.name}
                  - i++;
              +e("input")(type="hidden" name=filter.name value=filter.value).drop-hidden-input
        +e.filter._filter-reset
          +e("a")(href="#" data-tooltip="Сбросить все фильтры?").button-reset.tooltip Сбросить
            +e("span").x
    .grid.clearfix
      +e("ul").left
        - let i = 1;
        each item in galleryNav
          +e("li")(class="nav-item" + ((i == 4) ? "_active" : ""))
            +e("a")(href="#").nav-link !{item}
          - i++;
      +e.right
        +e.list.clearfix
          each item in gallery
            +e.item
              +e("a")(href=item.img title=item.text style="background:url(" +  item.preview + ") center no-repeat;background-size:cover").img
        +b("a")(href="#").button._blue.__button ЕЩЕ
