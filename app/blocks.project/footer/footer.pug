mixin footer(isMain)
  +b("footer").footer&attributes(attributes)
    .grid
      .row
        +e.col._logo
          if isMain
            +logo(false, false).__logo
          else
            +logo(true, false).__logo
          +socials.__socials
        +e.col._menu
          +e("nav").menu
            +e("h3").menu-title Заборы под ключ
            +e("ul").menu-list
              +e("li").menu-item._active
                +e("a")(href="#").menu-link Из профлиста
              +e("li").menu-item
                +e("a")(href="#").menu-link Из поликарбоната
              +e("li").menu-item
                +e("a")(href="#").menu-link Из металлического штакетника
              +e("li").menu-item
                +e("a")(href="#").menu-link С кирпичными столбами
              +e("li").menu-item
                +e("a")(href="#").menu-link Из сварной сетки Gitter
              +e("li").menu-item
                +e("a")(href="#").menu-link На ленточном фундаменте
              +e("li").menu-item
                +e("a")(href="#").menu-link Из сетки рабицы
              +e("li").menu-item
                +e("a")(href="#").menu-link С применением декора
              +e("li").menu-item
                +e("a")(href="#").menu-link Из дерева
        +e.col._contacts
          +contacts-block.__contacts-block

    +to-top
